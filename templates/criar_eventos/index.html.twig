{% extends 'base.html.twig' %}

{% block title %}Criar Evento!{% endblock %}

{% block body %}

    <div class="container-form">


        <h1>Criar Evento Presencial</h1>

        <form action="/criar-evento" method="post" class="criar-evento">
            <h2>1. Onde o seu evento vai acontecer?</h2>

            <div class="form-input">
                <label for="tipo-local">Local</label>
                <select name="tipo-local" id="tipo-local">
                    <option disabled selected>Selecione o local do evento</option>
                    <option value="1">Em um novo endereço</option>
                    <option value="2">Ainda será definido</option>
                </select>
            </div>

            <div class="form-input">
                <label for="nome-local">Nome do Local</label>
                <input type="text" id="nome-local">
            </div>

            <div class="form-input">
                <label for="cep">CEP</label>
                <input type="text" id="cep">
            </div>

            <div class="form-input">
                <label for="rua">Av./Rua</label>
                <input type="text" id="rua">
            </div>

            <div class="form-input">
                <label for="numero">Número</label>
                <input type="text" id="numero">
            </div>

            <div class="form-input">
                <label for="complemento">Complemento</label>
                <input type="text" id="complemento">
            </div>

            <div class="form-input">
                <label for="bairro">Bairro</label>
                <input type="text" id="bairro">
            </div>

            <div class="form-input">
                <label for="cidade">Cidade</label>
                <input type="text" id="cidade">
            </div>

            <div class="form-input">
                <label for="estado">Estado</label>
                <input type="text" id="estado">
            </div>

            <button>Cadastrar</button>
        </form>
    </div>
{% endblock %}

