{% block body %}

    <div class="container-form">
        <h1>Crie o seu evento agora!</h1>

        {{ form_start(formulario) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(formulario) }}
        </div>
        <div class="col">
            {{ form_row(formulario.nomeDoLocal) }}
        </div>
        <div class="col">
            {{ form_row(formulario.cep) }}
