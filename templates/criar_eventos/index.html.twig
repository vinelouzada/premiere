        <div class="col">
            {{ form_row(formulario.complemento) }}
        </div>
        <div class="col">
            {{ form_row(formulario.bairro) }}
        </div>
        <div class="col">
            {{ form_row(formulario.cidade) }}
        </div>
        <div class="col">
            {{ form_row(formulario.estado) }}
        </div>
        <div class="row">
            <div class="col">
                {{ form_row(formulario.nome) }}
            </div>
            <div class="col">
                {{ form_row(formulario.imagemDeDivulgacao) }}
            </div>
            <div class="col">
                {{ form_row(formulario.descricao) }}
            </div>
            <div class="col">
                {{ form_row(formulario.dataEHoraInicio) }}
            </div>
            <div class="col">
                {{ form_row(formulario.dataEHoraFim) }}
            </div>
            <div class="col">
                {{ form_row(formulario.tipoIngresso) }}
            </div>
            <div class="col">
                {{ form_row(formulario.visibilidade) }}
            </div>
        </div>
        {{ form_end(formulario) }}
    </div>


